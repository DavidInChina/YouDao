<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="dialog_blue_button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.




    -->
<style name="XiaoYouFullScreenStyle" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        All customizations that are NOT specific to a particular API-level can go here.
                <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#999</item>
    </style>

    <style xmlns:android="http://schemas.android.com/apk/res/android" name="TextAppearance" />

    <style name="TextAppearance.Guide" parent="TextAppearance">
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Guide.Merchant" parent="TextAppearance.Guide">
        <item name="android:textColor">#777</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Guide.ItemTitle" parent="TextAppearance.Guide">
        <item name="android:textColor">@color/text_item_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="B5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff0e0e0e</item>
        <item name="android:shadowColor">@color/semi_transparent_w</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="G1_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="mydialogstyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="XiaoYouStyle" parent="@style/AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:windowNoTitle">true</item>
         <item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <style name="TabhomeStyle" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TranslucentTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
 
